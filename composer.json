{
  "name": "irfanh94/word-count-php",
  "description": "Correct word count for all languages in PHP",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "word",
    "count",
    "php"
  ],
  "authors": [
    {
      "name": "Irfan Hodzic",
      "homepage": "https://github.com/irfanh94"
    }
  ],
  "homepage": "https://github.com/irfanh94/word-count-php",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": ">=9.6",
    "phpbench/phpbench": "^1.2",
    "mockery/mockery": "^1.5"
  },
  "autoload": {
    "psr-4": {
      "WordCounter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WordCounter\\Tests\\": "src/"
    }
  },
  "scripts": {
    "test": [
      "@php vendor/bin/phpunit"
    ],
    "bench": [
      "@php vendor/bin/phpbench run --report=default"
    ]
  }
}
